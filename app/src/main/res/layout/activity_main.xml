<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border"> <!-- Áp dụng viền từ drawable -->

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách tên"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <!-- ListView để hiển thị danh sách tên -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>

    <!-- Nút Thêm tên ngẫu nhiên -->
    <Button
        android:id="@+id/btnAddRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm tên ngẫu nhiên"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
